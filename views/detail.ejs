<%- include('../components/head') %>
<%- include('../components/navbar') %>
    <main class="container mx-auto min-h-screen py-4 px-8">
        <h1 class="text-3xl font-semibold mt-4">Details</h1>
        <div class="flex w-full mt-8">
            <div class="w-1/3 flex flex-col items-center">
                <img src="<%= data['poster'] %>" class="w-[280px]" alt="">
            </div>
            <div class="w-2/3 py-2 px-4">
                <div class="w-4/5">
                    <h1 class="text-3xl font-semibold"><%= data['title'] %></h1>
                    <p class="font-medium text-neutral-600">Category : <%= data['category'] %></p>
                    <hr class="my-2">
                    <p class="font-semibold">Synopsis</p>
                    <p class="text-justify indent-6 text-neutral-500"><%= data['synopsis'] %></p>
                    <hr class="my-2">
                </div>
                <a href="<%= data['pdf'] %>">
                    <button class="px-4 py-2 bg-emerald-500 text-white hover:bg-emerald-700 transition rounded-lg shadow-md hover:shadow-2xl">Click to read</button>
                </a>
            </div>
        </div>
    </main>
</body>
</html>